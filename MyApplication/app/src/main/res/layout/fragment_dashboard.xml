<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".siswa.Dashboard"
    android:orientation="vertical"
    android:background="@color/grey">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="WELCOME"
            android:textSize="40dp"
            android:layout_width="200dp"
            android:layout_height="50dp"/>

        <TextView
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:text="SMS"/>

        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_marginTop="5dp"
            android:text="Sistem Monitoring Siswa"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/sekolah"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/btn_bg5"
                            android:src="@drawable/absen1" />

                        <ImageButton
                            android:id="@+id/bk"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn_bg6"
                            android:src="@drawable/bk" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/kelas"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:background="@drawable/btn_bg6"
                            android:src="@drawable/absen" />

                        <ImageButton
                            android:id="@+id/suket"
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn_bg5"
                            android:src="@drawable/surat" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center">

            <ImageButton
                android:id="@+id/pembayaran"
                android:layout_width="165dp"
                android:layout_height="116dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circleshape"
                android:src="@drawable/info" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>